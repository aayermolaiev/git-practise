pipeline {
    agent any

    triggers {
        pollSCM('H/5 * * * *') // Optional: Poll SCM every 5 minutes
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Run Python Script') {
            steps {
                script {
                    try {
                        sh 'python3 myapp.py' // Execute the script
                    } catch (Exception e) {
                        error("Script execution failed: ${e.message}")
                    }
                }
            }
        }
    }
}
